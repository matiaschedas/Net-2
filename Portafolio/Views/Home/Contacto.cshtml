@{
    ViewData["Title"] = "Contacto";
}

<div class="container">

    <h1>Formulario de Contacto</h1>

    <form asp-controller="Home" asp-action="Contacto">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba su nombre..." />
        </div>
        <div class="mb-3">  
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com" />
        </div>
        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>

<div class="container contacto">
    <h1>Otros Medios de Contacto:</h1>
    <ul>
        <li class="d-flex align-items-center mb-2">
            <i class="bi bi-linkedin me-2 fs-3"></i>
            <p class="mb-0 me-2">Linkedin:</p> <a class="mb-0" href="https://www.linkedin.com/in/matias-chedas/">matias-chedas</a>
        </li>
        <li class="d-flex align-items-center mb-2">
            <i class="bi bi-envelope me-2 fs-3"></i>
            <p class="mb-0 me-2">Email: </p> <a class="mb-0" href="mailto:matias.chedas@hotmail.com">matias.chedas@hotmail.com</a>
        </li>
    </ul>
</div>